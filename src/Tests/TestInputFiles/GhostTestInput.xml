<?xml version="1.0"?>
<input xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../XML_Parser/input.xsd">

    <generalParams>
        <t_end>0.0005</t_end>
        <delta_t>0.0005</delta_t>
        <writeFrequency>1</writeFrequency>
        <dimensionType>2D</dimensionType>

        <g_grav>0</g_grav>
        <useGravity>no</useGravity>

        <calcType>LJ</calcType>
        <baseNameOutputFiles>Ghost_Test</baseNameOutputFiles>
        <particleContainerType_p>linkedCell</particleContainerType_p>
        <cutoffRadius>3</cutoffRadius>
        <gravInput></gravInput>

        <loadCheckpoint>no</loadCheckpoint>
        <makeCheckpoint>no</makeCheckpoint>
        <pathInCheckpoint></pathInCheckpoint>
        <pathOutCheckpoint></pathOutCheckpoint>

        <domainSizeX>7</domainSizeX>
        <domainSizeY>11</domainSizeY>
        <domainSizeZ>12.5</domainSizeZ>

        <useThermostat>no</useThermostat>
        <useBrownianMotion>no</useBrownianMotion>
        <T_init>0</T_init>
        <T_target>0</T_target>
        <delta_T>0</delta_T>
        <n_thermostat>0</n_thermostat>
    </generalParams>

    <boundaryConditions>
        <top>reflectingType</top>
        <right>reflectingType</right>
        <bottom>reflectingType</bottom>
        <left>reflectingType</left>
        <front>reflectingType</front>
        <back>reflectingType</back>
    </boundaryConditions>

    <particlesLJ>
        <body>
            <bodyType>Cuboid</bodyType>
            <position>1,1,1</position>
            <velocity>0,0,0</velocity>
            <objectSpecificFormat>1,8,11</objectSpecificFormat>
            <epsilon>5.0</epsilon>
            <mass>1.0</mass>
            <rho>1.0</rho>
            <h>1.125</h>
        </body>
    </particlesLJ>

</input>
