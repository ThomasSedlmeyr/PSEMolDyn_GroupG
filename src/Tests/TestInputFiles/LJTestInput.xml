<?xml version="1.0"?>
<input xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../XML_Parser/input.xsd">

    <generalParams>
        <t_end>0.10001</t_end>
        <delta_t>0.0005</delta_t>
        <writeFrequency>100</writeFrequency>
        <dimensionType>2D</dimensionType>
        <parallelType>notParallel</parallelType>

        <g_grav>0</g_grav>
        <useGravity>no</useGravity>
        <gravDirection>z</gravDirection>

        <calcType>LJ</calcType>
        <baseNameOutputFiles>Lennard_Test</baseNameOutputFiles>
        <cutoffRadius>3</cutoffRadius>
        <gravInput></gravInput>

        <loadCheckpoint>no</loadCheckpoint>
        <makeCheckpoint>no</makeCheckpoint>
        <pathInCheckpoint></pathInCheckpoint>
        <pathOutCheckpoint></pathOutCheckpoint>

        <domainSizeX>100</domainSizeX>
        <domainSizeY>100</domainSizeY>
        <domainSizeZ>10</domainSizeZ>

        <useThermostat>no</useThermostat>
        <thermostatType>regular</thermostatType>
        <useBrownianMotion>no</useBrownianMotion>
        <T_init>0</T_init>
        <T_target>0</T_target>
        <delta_T>0</delta_T>
        <n_thermostat>0</n_thermostat>

        <useVelDensProfiling>no</useVelDensProfiling>
        <numberOfBins>1</numberOfBins>
        <pathToAnalysisFolder>../SimulationAnalysis_Files</pathToAnalysisFolder>

        <crystallization_r_c>0</crystallization_r_c>
        <crystallization_r_l>0</crystallization_r_l>
    </generalParams>

    <boundaryConditions>
        <top>outflowType</top>
        <right>outflowType</right>
        <bottom>outflowType</bottom>
        <left>outflowType</left>
        <front>outflowType</front>
        <back>outflowType</back>
    </boundaryConditions>

    <particlesLJ>
        <body>
            <bodyType>Cuboid</bodyType>
            <position>0,10,0</position>
            <velocity>0,-8,0</velocity>
            <objectSpecificFormat>5,5,5</objectSpecificFormat>
            <epsilon>5.0</epsilon>
            <mass>1.0</mass>
            <rho>1.0</rho>
            <h>1.125</h>
            <bodyState>moving</bodyState>
        </body>

        <body>
            <bodyType>Tetrahedron</bodyType>
            <position>0,0,0</position>
            <velocity>0,3,0</velocity>
            <objectSpecificFormat>4</objectSpecificFormat>
            <epsilon>5.0</epsilon>
            <mass>1.0</mass>
            <rho>1.0</rho>
            <h>1.125</h>
            <bodyState>moving</bodyState>
        </body>
    </particlesLJ>

</input>
