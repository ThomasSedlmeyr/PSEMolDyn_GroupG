<?xml version="1.0"?>
<input xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../XML_Parser/input.xsd">

    <generalParams>
        <t_end>0.05000001</t_end>
        <delta_t>0.0005</delta_t>
        <writeFrequency>100</writeFrequency>
        <dimensionType>3D</dimensionType>
        <parallelType>notParallel</parallelType>

        <g_grav>-12.44</g_grav>
        <useGravity>yes</useGravity>
        <gravDirection>y</gravDirection>

        <calcType>LJ</calcType>
        <baseNameOutputFiles>RayleighTaylorTest</baseNameOutputFiles>
        <particleContainerType>linkedCell</particleContainerType>
        <cutoffRadius>2.5</cutoffRadius>
        <gravInput>../eingabe-sonne.txt</gravInput>

        <loadCheckpoint>no</loadCheckpoint>
        <makeCheckpoint>no</makeCheckpoint>
        <pathInCheckpoint>checkpoint_RT.txt</pathInCheckpoint>
        <pathOutCheckpoint>checkpoint_RT.txt</pathOutCheckpoint>

        <domainSizeX>63</domainSizeX>
        <domainSizeY>36</domainSizeY>
        <domainSizeZ>6</domainSizeZ>

        <useThermostat>yes</useThermostat>
        <thermostatType>regular</thermostatType>
        <useBrownianMotion>yes</useBrownianMotion>
        <T_init>40</T_init>
        <T_target>40</T_target>
        <delta_T>10000</delta_T>
        <n_thermostat>1000</n_thermostat>

        <useVelDensProfiling>no</useVelDensProfiling>
        <numberOfBins>1</numberOfBins>
    </generalParams>

    <boundaryConditions>
        <top>betterReflectingType</top>
        <right>periodicType</right>
        <bottom>betterReflectingType</bottom>
        <left>periodicType</left>
        <front>betterReflectingType</front>
        <back>betterReflectingType</back>
    </boundaryConditions>

    <particlesLJ>
        <body>
            <bodyType>Cuboid</bodyType>
            <position>0.6,2,1</position>
            <velocity>0,0,0</velocity>
            <objectSpecificFormat>50,14,1</objectSpecificFormat>
            <epsilon>1.0</epsilon>
            <mass>1.0</mass>
            <rho>1.0</rho>
            <h>1.2</h>
            <bodyState>moving</bodyState>
        </body>

        <body>
            <bodyType>Cuboid</bodyType>
            <position>0.6,19,1</position>
            <velocity>0,0,0</velocity>
            <objectSpecificFormat>50,14,1</objectSpecificFormat>
            <epsilon>1.0</epsilon>
            <mass>2.0</mass>
            <rho>0.9412</rho>
            <h>1.2</h>
            <bodyState>moving</bodyState>
        </body>
    </particlesLJ>
</input>