<?xml version="1.0"?>
<input xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../XML_Parser/input.xsd">

    <t_end>20</t_end>
    <delta_t>0.0005</delta_t>
    <calcType>LJ</calcType>
    <baseNameOutputFiles>Lennard</baseNameOutputFiles>
    <writeFrequency>100</writeFrequency>
    <gravInput></gravInput>

    <paramsLJ>
        <epsilon>5.0</epsilon>
        <mass>1.0</mass>
        <rho>1.0</rho>
        <h>1.1225</h>
        <domainSizeX>180</domainSizeX>
        <domainSizeY>90</domainSizeY>
        <domainSizeZ>1</domainSizeZ>
        <particleContainerType>2</particleContainerType>
        <cutoffRadius>3</cutoffRadius>
    </paramsLJ>

    <boundaryConditions>
        <top>1</top>
        <right>1</right>
        <bottom>1</bottom>
        <left>1</left>
        <front>1</front>
        <back>1</back>
    </boundaryConditions>

    <particlesLJ>
        <body>
            <bodyType>Cuboid</bodyType>
            <position>20,20,1</position>
            <velocity>0,0,0</velocity>
            <objectSpecificFormat>100,20,1</objectSpecificFormat>
        </body>

        <body>
            <bodyType>Cuboid</bodyType>
            <position>70,60,1</position>
            <velocity>0,-10,0</velocity>
            <objectSpecificFormat>20,20,1</objectSpecificFormat>
        </body>
    </particlesLJ>

</input>