<?xml version="1.0"?>
<input xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../XML_Parser/input.xsd">

    <generalParams>
        <t_end>40</t_end>
        <delta_t>0.0005</delta_t>
        <writeFrequency>100</writeFrequency>
        <dimensionType>2D</dimensionType>

        <g_grav>-12.44</g_grav>
        <useGravity>yes</useGravity>

        <calcType>LJ</calcType>
        <baseNameOutputFiles>Lennard</baseNameOutputFiles>
        <particleContainerType_p>linkedCell</particleContainerType_p>
        <cutoffRadius>3</cutoffRadius>
        <gravInput>../eingabe-sonne.txt</gravInput>

        <loadCheckpoint>yes</loadCheckpoint>
        <makeCheckpoint>no</makeCheckpoint>
        <pathInCheckpoint>Checkpoint_Files/checkpoint_FallingDropLiquid_fluid.txt</pathInCheckpoint>
        <pathOutCheckpoint>Checkpoint_Files/checkpoint_FallingDropLiquid_fluid.txt</pathOutCheckpoint>

        <domainSizeX>303</domainSizeX>
        <domainSizeY>180</domainSizeY>
        <domainSizeZ>1</domainSizeZ>

        <useThermostat>no</useThermostat>
        <T_init>0.5</T_init>
        <T_target>0.5</T_target>
        <delta_T>0</delta_T>
        <n_thermostat>1000</n_thermostat>
    </generalParams>

    <boundaryConditions>
        <top>betterReflectingType</top>
        <right>betterReflectingType</right>
        <bottom>betterReflectingType</bottom>
        <left>betterReflectingType</left>
        <front>betterReflectingType</front>
        <back>betterReflectingType</back>
    </boundaryConditions>

    <particlesLJ>
        <body>
            <bodyType>Sphere</bodyType>
            <position>150,150,1</position>
            <velocity>0,0,0</velocity>
            <objectSpecificFormat>20</objectSpecificFormat>
            <epsilon>1.0</epsilon>
            <mass>1.0</mass>
            <rho>1.2</rho>
            <h>1.2</h>
        </body>
    </particlesLJ>

</input>