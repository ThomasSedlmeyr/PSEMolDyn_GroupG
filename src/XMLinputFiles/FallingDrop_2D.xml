<?xml version="1.0"?>
<input xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../XML_Parser/input.xsd">

    <generalParams>
        <t_end>10</t_end>
        <delta_t>0.00005</delta_t>
        <writeFrequency>50</writeFrequency>
        <dimensionType>2D</dimensionType>

        <g_grav>0</g_grav>
        <useGravity>no</useGravity>

        <calcType>LJ</calcType>
        <baseNameOutputFiles>FallingDrop_2D</baseNameOutputFiles>
        <particleContainerType>linkedCell</particleContainerType>
        <cutoffRadius>3</cutoffRadius>
        <gravInput></gravInput>

        <loadCheckpoint>no</loadCheckpoint>
        <makeCheckpoint>no</makeCheckpoint>
        <pathInCheckpoint></pathInCheckpoint>
        <pathOutCheckpoint></pathOutCheckpoint>

        <domainSizeX>120</domainSizeX>
        <domainSizeY>50</domainSizeY>
        <domainSizeZ>6</domainSizeZ>

        <useThermostat>no</useThermostat>
        <useBrownianMotion>no</useBrownianMotion>
        <T_init>0</T_init>
        <T_target>0</T_target>
        <delta_T>0</delta_T>
        <n_thermostat>0</n_thermostat>
    </generalParams>

    <boundaryConditions>
        <top>betterReflectingType</top>
        <right>betterReflectingType</right>
        <bottom>betterReflectingType</bottom>
        <left>betterReflectingType</left>
        <front>betterReflectingType</front>
        <back>betterReflectingType</back>
    </boundaryConditions>

    <particlesLJ>
        <body>
            <bodyType>Sphere</bodyType>
            <position>60,25,3</position>
            <velocity>0,-10,0</velocity>
            <objectSpecificFormat>15</objectSpecificFormat>
            <epsilon>5.0</epsilon>
            <mass>1.0</mass>
            <rho>1.0</rho>
            <h>1.125</h>
        </body>
    </particlesLJ>

</input>